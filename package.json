{
  "name": "ui-components",
  "version": "0.1.0",
  "description": "A collection of React UI components",
  "main": "index.js",
  "scripts": {
    "build:clean": "rimraf ./build",
    "build:gh-pages": "rimraf ./dist && NODE_ENV=production webpack --config ./config/webpack.config.gh-pages.js && cp ./gh-pages.html.example ./dist/index.html",
    "build:webpack": "NODE_ENV=production webpack --config ./config/webpack.config.prod.js",
    "build": "npm run build:clean && npm run build:webpack",
    "deploy": "npm run build:gh-pages && gh-pages -d dist",
    "eslint": "eslint ./src",
    "release:pre": "mv src src-temp && mv build src",
    "release:post": "rimraf src && mv src-temp src && npm run build:clean",
    "release-patch": "npm version patch -m \"Upgrade to %s\" && npm run build && npm run release:pre && npm publish && npm run release:post && npm run deploy",
    "release-minor": "npm version minor -m \"Upgrade to %s\" && npm run build && npm run release:pre && npm publish && npm run release:post && npm run deploy",
    "release-major": "npm version major -m \"Upgrade to %s\" && npm run build && npm run release:pre && npm publish && npm run release:post && npm run deploy",
    "server-dev": "open http://localhost:8080 && webpack-dashboard -- webpack-dev-server --devtool-eval --inline --hot --watch --progress --colors --display-error-details --content-base html --config ./config/webpack.config.dev.js",
    "validate-webpack-dev": "webpack-validator ./config/webpack.config.dev.js",
    "validate-webpack-gh-pages": "webpack-validator ./config/webpack.config.gh-pages.js",
    "validate-webpack-prod": "webpack-validator ./config/webpack.config.prod.js"
  },
  "author": "Johnny Ji",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer-loader": "^3.2.0",
    "babel-core": "^6.14.0",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.5",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.5.0",
    "copyfiles": "^1.0.0",
    "css-loader": "^0.25.0",
    "deploy": "^1.0.3",
    "eslint": "^3.5.0",
    "eslint-config-johnnyji": "^0.1.6",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-react": "^6.3.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "gh-pages": "^0.11.0",
    "html-loader": "^0.4.4",
    "postcss-loader": "^0.13.0",
    "rimraf": "^2.5.4",
    "sass-loader": "^4.0.2",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.2",
    "webpack-dashboard": "^0.1.8",
    "webpack-dev-server": "^1.16.1"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "draft-js": "^0.9.1",
    "draft-js-export-html": "^0.4.0",
    "draft-js-plugins-editor": "^2.0.0-beta1",
    "immutable": "^3.8.1",
    "lodash": "^4.16.1",
    "node-sass": "^3.10.0",
    "node-uuid": "^1.4.7",
    "onstop": "^1.1.0",
    "pure-render-decorator": "^1.1.1",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-immutable-proptypes": "^2.1.0",
    "react-keydown": "^1.6.2",
    "react-router": "^2.8.1",
    "react-tabs": "^0.8.0",
    "signature_pad": "^1.5.3",
    "validator": "^5.7.0",
    "velocity-react": "^1.1.5"
  }
}
